@import '_settings'
@import '_mailchimp'

normalize-css()
base()

$padding-left = 100px

*
  box-sizing: border-box

.group
  group()

header
  background-color: $black
  max-height: 75px

body
  background-color: $gray
  font-family: 'Roboto', sans-serif;
  font-size: 10px
  font-weight: 300

a
  link($font-color)

.wrap
  max-width: 1325px
  margin: 0 auto

.logo
  padding-left: $padding-left

.landing
  background-color: $white
  group()

.info
  float: left
  width: 46%
  font-size: 2.4em

.title
  padding: 80px 0 50px
  text-align: center

h2, h3
  font-size: 1.58em
  font-weight: 300
  margin: 10px 0

.links
  inline-list()
  text-align: center

  li
    width: 33%
    margin: 30px 0

.headshot
  float: right
  width: 54%
  display: block
